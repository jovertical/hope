{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/"],
            "typings/*": ["src/typings/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["__tests__/**/*.spec.ts"]
}
